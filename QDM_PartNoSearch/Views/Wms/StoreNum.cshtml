@{
    ViewData["Title"] = "庫存查詢";
}
@model List<WmsProduct>

<div class="container mt-4">
    <h3 class="mb-4">商品庫存和訂單明細</h3>
    <div class="table-container">
        <table class="display" id="table_id">
            <thead>
                <tr>
                    <th>商品編號</th>
                    <th>ERP品號</th>
                    <th>商品名稱</th>
                    <th>現有庫存</th>
                    <th>訂單需求數量</th>
                    <th>實際庫存數量</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    // 計算實際庫存數量
                    var actualStock = product.Stock - product.Qty;
                    // 根據實際庫存數量設定 CSS 類
                    var rowStyle = actualStock < 0 ? "color:red" : "";

                    <tr style="@rowStyle">
                        <td>@product.Id</td>
                        <td>@product.PartNo</td>
                        <td>@product.Name</td>
                        <td>@product.Stock</td>
                        <td>@product.Qty</td>
                        <td>@actualStock</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>